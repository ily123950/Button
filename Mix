local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local localPlayer = Players.LocalPlayer

-- Создание кнопки
local screenGui = Instance.new("ScreenGui", localPlayer:WaitForChild("PlayerGui"))
screenGui.ResetOnSpawn = false

local button = Instance.new("TextButton", screenGui)
button.Size = UDim2.new(0, 50, 0, 50)
button.Position = UDim2.new(0, 50, 0, 50)
button.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
button.Text = ""
button.TextTransparency = 1
button.BorderSizePixel = 0
button.BackgroundTransparency = 0.5

-- Настройки для круглой кнопки
local corner = Instance.new("UICorner", button)
corner.CornerRadius = UDim.new(1, 0)

-- Перетаскивание кнопки
button.Draggable = true

-- Создание Highlight для всех игроков
local function createHighlight(player)
    local highlight = Instance.new("Highlight")
    highlight.FillColor = Color3.fromRGB(255, 255, 0)
    highlight.FillTransparency = 0.5
    highlight.Adornee = player.Character
    highlight.Parent = player.Character
end

-- Удаление всех Highlight
local function removeAllHighlights()
    for _, player in pairs(Players:GetPlayers()) do
        if player.Character then
            local highlight = player.Character:FindFirstChildOfClass("Highlight")
            if highlight then
                highlight:Destroy()
            end
        end
    end
end

-- Нахождение ближайшего игрока
local function findNearestPlayer()
    local nearestPlayer = nil
    local shortestDistance = math.huge

    for _, player in pairs(Players:GetPlayers()) do
        if player ~= localPlayer and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
            local distance = (player.Character.HumanoidRootPart.Position - localPlayer.Character.HumanoidRootPart.Position).magnitude
            if distance < shortestDistance then
                shortestDistance = distance
                nearestPlayer = player
            end
        end
    end

    return nearestPlayer
end

-- Обновление Highlight для ближайшего игрока
local function updateHighlight()
    removeAllHighlights()
    local nearestPlayer = findNearestPlayer()
    if nearestPlayer then
        createHighlight(nearestPlayer)
    end
end

-- Телепортация за спину ближайшего игрока
button.MouseButton1Click:Connect(function()
    local nearestPlayer = findNearestPlayer()
    if nearestPlayer and nearestPlayer.Character and nearestPlayer.Character:FindFirstChild("HumanoidRootPart") then
        local offset = CFrame.new(0, 0, 3)  -- смещение на 3 единицы позади
        localPlayer.Character.HumanoidRootPart.CFrame = nearestPlayer.Character.HumanoidRootPart.CFrame * offset
    end
end)

-- Обновление Highlight каждые 0.1 секунды
RunService.RenderStepped:Connect(function()
    updateHighlight()
end)
